<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/backColor"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/enterDataFrom"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_enter_dialog"
                android:fontFamily="@font/ubuntu_light"
                android:gravity="center"
                android:singleLine="true"
                android:text="От: 21.11.23"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/textViewEnter"
                app:layout_constraintTop_toBottomOf="@+id/textViewEnter" />

            <TextView
                android:id="@+id/enterDataTo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="54dp"
                android:background="@drawable/rounded_enter_dialog"
                android:fontFamily="@font/ubuntu_light"
                android:gravity="center"
                android:singleLine="true"
                android:text="До: 05.12.23"
                android:textColor="@color/backColor"
                android:textColorHint="@color/backColor"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/textViewEnter"
                app:layout_constraintTop_toBottomOf="@+id/textViewEnter" />

            <Button
                android:id="@+id/dialogBtn"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Готово"
                android:textAllCaps="false"
                android:textColor="@color/backColor"
                android:textSize="16dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enterDataFrom" />

            <TextView
                android:id="@+id/textViewEnter"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:text="Выберите период"
                android:textColor="@color/secondaryWhite"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>