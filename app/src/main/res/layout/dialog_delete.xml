<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/secondaryWhite"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dialogBtnCancel"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Отмена"
                android:textAllCaps="false"
                android:textColor="@color/backColor"
                android:textSize="16dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMyInfo" />

            <TextView
                android:id="@+id/dialogBtnYes"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="center_horizontal|center_vertical"
                android:text="Да"
                android:textColor="@color/backColor"
                android:textSize="16dp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/dialogBtnCancel"
                app:layout_constraintEnd_toStartOf="@+id/dialogBtnCancel"
                app:layout_constraintTop_toTopOf="@+id/dialogBtnCancel"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textMyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/ubuntu"
                android:text="Стереть все данные?"
                android:textColor="@color/backColor"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>